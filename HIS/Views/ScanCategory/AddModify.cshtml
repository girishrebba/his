
@model HIS.ScanCategory
@{
    /**/

    /**/

    Layout = null;
}

@using (Html.BeginForm("AddModify", "ScanCategory", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.SCID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.ScanID)
        @Html.DropDownListFor(model => model.ScanID, ViewBag.Scans as SelectList, "--Select--", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ScanID)
    </div>
    <div class="form-group required">
        @Html.LabelFor(model => model.Category, new { @class = "control-label" })
        @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Category)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}