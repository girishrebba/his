@model HIS.Brand
@{
    Layout = null;
}

@using (Html.BeginForm("AddModify", "Brand", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.BrandID)
    <div class="form-group">
        @Html.LabelFor(model => model.BrandName, new { @class = "control-label" })
        @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.BrandName)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}