@{
    ViewBag.Title = "Home";
}
<ol class="breadcrumb breadcrumb-2">
    <li><a href="../Home"><i class="fa fa-home"></i>Home</a></li>
</ol>
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel minimal panel-default">
                    <div class="panel-heading clearfix">
                        <div class="panel-title">Total Inpatients</div>
                    </div>
                    <!-- panel body -->
                    <div class="panel-body">
                        <div class="stack-order">
                            <h1 class="no-margins"> @ViewBag.TotalInpatients</h1>
                            <small>Inpatients registered so far</small>
                        </div>
                        <div class="fa fa-user red-color"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel minimal panel-default">
                    <div class="panel-heading clearfix">
                        <div class="panel-title">Inpatients Today</div>
                    </div>
                    <!-- panel body -->
                    <div class="panel-body">
                        <div>
                            <h1 class="no-margins"> @ViewBag.InpatientsToday</h1>
                            <small>Inpatients registered today</small>
                        </div>
                        <div class="fa fa-user green-color icon-larger"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel minimal panel-default">
                    <div class="panel-heading clearfix">
                        <div class="panel-title">Outpatients</div>
                    </div>
                    <!-- panel body -->
                    <div class="panel-body">
                        <div class="stack-order">
                            <h1 class="no-margins"> @ViewBag.OnpatientsToday</h1>
                            <small>Outpatients registered today</small>
                        </div>
                        <div class="fa fa-user green-color"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel minimal panel-default">
                    <div class="panel-heading clearfix">
                        <div class="panel-title">Available Rooms</div>
                    </div>
                    <!-- panel body -->
                    <div class="panel-body">
                        <div class="stack-order">
                            <h1 class="no-margins"> @ViewBag.AvailableRooms</h1>
                    <small>Total rooms available</small>
                    </div>
                        <i class="fa fa-door-open icon-larger green-color">
                        </i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel minimal panel-default">
                    <div class="panel-heading clearfix">
                        <div class="panel-title">Available Beds</div>
                    </div>
                    <!-- panel body -->
                    <div class="panel-body">
                        <div>
                            <h1 class="no-margins"> @ViewBag.AvailableBeds</h1>
                            <small>Total beds available</small>
                        </div>
                        <div class="fa fa-bed green-color icon-larger"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel minimal panel-default">
                    <div class="panel-heading clearfix">
                        <div class="panel-title">Allocated Beds</div>
                    </div>
                    <!-- panel body -->
                    <div class="panel-body">
                        <div class="stack-order">
                            <h1 class="no-margins"> @ViewBag.AllocatedBeds</h1>
                            <small>Total beds allocated</small>
                        </div>
                        <div class="fa fa-bed red-color"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel minimal panel-default">
                    <div class="panel-heading clearfix">
                        <div class="panel-title">Reorts Undelivered</div>
                    </div>
                    <!-- panel body -->
                    <div class="panel-body">
                        <div class="stack-order">
                            <h1 class="no-margins"> @ViewBag.UnDeliverted</h1>
                            <small>Total lab reports yet to be delivered</small>
                        </div>
                        <i class="fa fa-flask icon-larger red-color">
                        </i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">



</div>
