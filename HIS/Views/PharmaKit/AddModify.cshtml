@model HIS.PharmaKit
@{
    Layout = null;
}
@using (Html.BeginForm("AddModify", "PharmaKit", FormMethod.Post, new { onsubmit = "return SubmitPharmaKitForm(this)" }))
{
    @Html.HiddenFor(model => model.PKitID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.PKItName, "Name:", new { @class = "control-label" })
        @Html.EditorFor(model => model.PKItName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PKItName)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
