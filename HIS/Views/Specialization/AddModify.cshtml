@model HIS.Specialization
@{
    Layout = null;
}

@using (Html.BeginForm("AddModify", "Specialization", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.SpecializationID)
    <div class="form-group">
        @Html.LabelFor(model => model.DoctorType, new { @class = "control-label" })
        @Html.EditorFor(model => model.DoctorType, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DoctorType)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
