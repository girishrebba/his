@model HIS.Room

@{
    Layout = null;
}

@using (Html.BeginForm("AddModify", "Rooms", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.RoomNo)
    <div class="astriskNote"><span></span></div>
    <div class="form-horizontal">
        <div class="form-group required">
            @Html.LabelFor(model => model.RoomName, new { @class = "control-label col-md-2" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.RoomName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoomName)
            </div>

            @Html.LabelFor(model => model.Description, "Description", new { @class = "control-label col-md-2" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RoomBedCapacity, new { @class = "control-label col-md-2 required" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.RoomBedCapacity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoomBedCapacity)
            </div>
            @Html.LabelFor(model => model.RoomTypeID, "Room Type:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-4">
                @Html.DropDownListFor(model => model.RoomTypeID, ViewBag.RoomTypeList as SelectList, "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoomTypeID)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CostPerDay, new { @class = "control-label col-md-2 required" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.CostPerDay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CostPerDay)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 col-md-offset-5">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn" />
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker({
            keyboardNavigation: false,
            forceParse: false,
            todayHighlight: true,
            todayBtn: false,
            format: "mm/dd/yyyy",language: "en-US"
        });

        $('.btnpicker').click(function () {
            //alert('clicked');
            $('.datepicker').datepicker('show');
        });
    });
</script>