
@{
    ViewBag.Title = "Rooms";   
}


<!-- Breadcrumb -->
<ol class="breadcrumb breadcrumb-2">
    <li><a href="index.html"><i class="glyphicon-cog"></i>Admin</a></li>
    <li class="active"><strong>Rooms</strong></li>
</ol>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddModify","Rooms")')"><i class="fa fa-plus"></i> Add New</a>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="usersTable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>                                
                                <th>Room No</th>
                                <th>Description</th>
                                <th>Cost Per Day</th>
                                <th>Room Status</th>
                               @*<th>Next Availbility</th>*@
                                <th>Room Bed Capacity</th>
                                <th>Room Type</th>                                
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#usersTable").DataTable({
                "ajax": {
                    "url": "/Rooms/GetRooms",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "RoomName" },
                    { "data": "Description" },
                    { "data": "CostPerDay" },
                    { "data": "RoomStatusDisplay" },
                   // { "data": "DateDisplay" },
                    { "data": "RoomBedCapacity" },
                    { "data": "RoomType" },
                    {
                        "data":"RoomNo", "render" : function (data) {
                        return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("AddModify","Rooms")/" + data + "')><i class='fa fa-pencil-alt'></i> Edit</a>";
                    },
                        "orderable": false,
                        "searchable":false
                    }
                ],
                "language": {
                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });


        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    modal:true,
                    title: 'Add Modify Rooms',
                    height: 500,
                    width: 850,
                    top:161,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    },
                    open: function (event, ui) {
                        $('.ui-dialog-content').css('overflow', 'hidden');
                    }

                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if($(form).valid()){
                $.ajax({
                    type : "POST",
                    url : form.action,
                    data : $(form).serialize(),
                    success : function (data) {
                        if(data.success)
                        {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message,{
                                globalPosition :"top center",
                                className : "success"
                            })

                        }
                    }
                });
            }
            return false;
        }

        function Delete(id) {
            if(confirm('Are You Sure to Delete this Room?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Rooms")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }
    </script>
}
