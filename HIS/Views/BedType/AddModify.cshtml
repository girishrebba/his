@model HIS.BedType

@{
    /**/

    Layout = null;
}

@using (Html.BeginForm("AddModify", "BedType", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.BedTypeID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.BedType1, "Bed Type:", new { @class = "control-label col-md-3" })

        @Html.EditorFor(model => model.BedType1, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.BedType1)
    </div>

    <div class="form-group required">
        @Html.LabelFor(model => model.BedTypeDescription, "Description:", new { @class = "control-label col-md-3" })
        @Html.EditorFor(model => model.BedTypeDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.BedTypeDescription)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
