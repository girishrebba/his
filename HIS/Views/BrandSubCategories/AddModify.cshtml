@model HIS.BrandSubCategory
@{
    Layout = null;
}
@using (Html.BeginForm("AddModify", "BrandSubCategories", FormMethod.Post, new { onsubmit = "return SubmitSubCategoryForm(this)" }))
{
    @Html.HiddenFor(model => model.SubCategoryID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.SubCategory, "Sub Category:", new { @class = "control-label" })
        @Html.EditorFor(model => model.SubCategory, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SubCategory)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}