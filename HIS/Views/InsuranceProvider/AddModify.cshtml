@model HIS.InsuranceProvider
@{
                /**/

                Layout = null;
}
@using (Html.BeginForm("AddModify", "InsuranceProvider", FormMethod.Post, new { onsubmit = "return SubmitProviderForm(this)" }))
{
    @Html.HiddenFor(model => model.ProviderID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.ProviderName, "Provider:", new { @class = "control-label" })
        @Html.EditorFor(model => model.ProviderName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ProviderName)
    </div>
    <div class="form-group required">
        @Html.LabelFor(model => model.Company, "Company:", new { @class = "control-label" })
        @Html.EditorFor(model => model.Company, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Company)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}