
@model HIS.Scan
@{
                /**/

                Layout = null;
}

@using (Html.BeginForm("AddModify", "Scan", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ScanID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.ScanName, new { @class = "control-label" })
        @Html.EditorFor(model => model.ScanName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ScanName)
    </div>
    <div class="form-group required">
        @Html.LabelFor(model => model.ScanCost, new { @class = "control-label" })
        @Html.EditorFor(model => model.ScanCost, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ScanCost)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}