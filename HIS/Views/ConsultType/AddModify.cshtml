@model HIS.ConsultationType
@{
    Layout = null;
}

@using (Html.BeginForm("AddModify", "ConsultType", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ConsultTypeID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.ConsultType, new { @class = "control-label" })
        @Html.EditorFor(model => model.ConsultType, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ConsultType)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
