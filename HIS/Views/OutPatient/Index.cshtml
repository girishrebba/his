
@{
    ViewBag.Title = "OP";
}

<style type="text/css">
    .lableDisplay {
        padding-top: 8px;
        color: #32CD32;
        font-weight: bold;
    }

    .ui-dialog {
        top: 60px !important;
    } 


    /*.his-consultation-calendar {
        background-color: #BA55D3;
        border-color: #BA55D3;
    }*/
</style>
<!-- Breadcrumb -->
<ol class="breadcrumb breadcrumb-2">
    <li><a href="index.html"><i class="glyphicon-cog"></i>Patients</a></li>
    <li class="active"><strong>Out Patients</strong></li>
</ol>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddModify","OutPatient")')"><i class="fa fa-plus"></i> Out Patient</a>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="outPatientsTable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>ENMRNO</th>
                                <th>Name</th>
                                <th>DOB</th>
                                <th>Gender</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Doctor</th>
                                <th>Enrolled</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Popup, dataTable, viewPatient, newVisit, prescription;
        $(document).ready(function () {
            dataTable = $("#outPatientsTable").DataTable({
                "ajax": {
                    "url": "/OutPatient/GetOutPatients",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ENMRNO" },
                    { "data": "Name" },
                    { "data": "DOBDisplay" },
                    { "data": "GenderDisplay" },
                    { "data": "Address" },
                    { "data": "Phone" },
                    { "data": "DoctorName" },
                    { "data": "EnrolledDisplay" },
                    {
                        "data":"SNO", "render" : function (data) {
                            return "<a class='btn btn-default btn-sm' title='Edit' onclick=PopupForm('@Url.Action("AddModify","OutPatient")/" + data + "')><i class='fa fa-pencil-alt'></i></a>"
                                + "<a class='btn btn-info btn-sm' title = 'View Patient' style = 'margin-left:5px' onclick = PopupViewPatient('@Url.Action("ViewPatient", "OutPatient")/" + data + "')><i class='fa fa-info-circle'></i></a>"
                                + "<a class='btn btn-primary btn-sm' title='Consultation' style='margin-left:5px' onclick=PopupNewVisit('@Url.Action("NewVisit", "OutPatient")/" + data + "')> <i class='fa fa-calendar'></i></a>"
                                + "<a class='btn btn-primary btn-sm' title='Prescription' style='margin-left:5px' onclick=PopupPrescription('@Url.Action("OPPrescription", "OutPatient")/" + data + "')><i class='fa fa-notes-medical'></i></a>"
                                + "<a class='btn btn-primary btn-sm' title='Admit as IP' style='margin-left:5px' onclick=onclick=ConvertOpToIp("+data+")><i class='fa fa-hospital'></i></a>";
                    },
                        "orderable": false,
                        "searchable": false

                    }
                ],
                "order": [[7, "desc"], [0, "desc"]],
                "language": {
                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    modal:true,
                    title: 'Add Modify Out Patient',
                    width: 850,
                    top: 147,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    },
                    open: function (event, ui) {
                        $('.ui-dialog-content').css('overflow', 'hidden');
                    }
                });
            });
        }

        function PopupViewPatient(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    viewPatient = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        modal: true,
                        title: 'View Patient',
                        width: 850,
                        top: 161,
                        close: function () {
                            viewPatient.dialog('destroy').remove();
                        },
                        open: function (event, ui) {
                            $('.ui-dialog-content').css('overflow', 'hidden');
                        }
                    });
                });
        }
        function PopupNewVisit(url) {
            var newVisitDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    newVisitDiv.html(response);
                    newVisit = newVisitDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        modal: true,
                        title: 'New Consultation',
                        width: '75%',
                        close: function () {
                            newVisit.dialog('destroy').remove();
                        },
                        open: function (event, ui) {
                            $('.ui-dialog-content').css('overflow', 'hidden');
                        }
                    });
                });
        }

        function PopupPrescription(url) {
            var newPrescription = $('<div/>');
            $.get(url)
                .done(function (response) {
                    newPrescription.html(response);
                    newPP = newPrescription.dialog({
                        autoOpen: true,
                        resizable: false,
                        modal: true,
                        title: 'New Prescription',
                        width: 850,
                        close: function () {
                            newPP.dialog('destroy').remove();
                        },
                        open: function (event, ui) {
                            $('.ui-dialog-content').css('overflow', 'hidden');
                        }
                    });
                });

        }
        function SubmitForm(form) {
            $.validator.setDefaults({
                ignore: []
            });
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
           return false;
        }

        function SubmitConsultationForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            newVisit.dialog('close');
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function SubmitPrescriptionForm(form) {
            var ppItems = [];
            $('#MedicineWithDose').rules('remove', 'required');
            $('#Quantity').rules('remove', 'required');
            $('#IntakeFrequencyID').rules('remove', 'required');
            var enmrNo = $('#ENMRNO').val();
            var visitID = $('#VisitID').val();
            $('#ppTable > tbody tr').not(':first').each(function (index, elem) {
                var tbl = {};
                tbl.ENMRNO = enmrNo;
                tbl.VisitID = visitID;
                tbl.MedicineID = $($(this).find('td:eq(0)')).html();
                tbl.MedicineWithDose = $($(this).find('td:eq(1)')).html();
                tbl.Quantity = $($(this).find('td:eq(2)')).html();
                tbl.IntakeFrequencyID = $($(this).find('td:eq(3)')).html();
                tbl.Comments = $($(this).find('td:eq(5)')).html();
                ppItems.push(tbl);
            });
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: form.action,
                data: JSON.stringify(ppItems),
                success: function (data) {
                    if (data.success) {
                        newPP.dialog('close');
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })

                    }
                }
            });
            return false;
        }

        function ConvertOpToIp(id) {
            if(confirm('Are You Sure to Convert as In Patient?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ConvertOpToIp", "OutPatient")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                            window.location.href = '@Url.Action("Index", "InPatient")';
                        }
                    }

                });
            }
        }
    </script>
}



