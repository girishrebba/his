<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | SRAVANTHI HIS</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/chosen.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/his_customstyles.css" rel="stylesheet" />
    <link href="~/Content/jquery.loadingModal.min.css" rel="stylesheet" />
    <style type="text/css">
        .his-site-header {
            padding: 12.5px !important;
            background-color: #fff !important;
            border-bottom: solid 1px #e3e1e1 !important;
        }

        .page-container.sidebar-collapsed .site-header {
            padding: 18px !important;
        }

        .his-icon-side-menu {
            color: #212529 !important
        }

        .required.control-label:after {
            content: "*";
            color: red;
        }
        .astriskNote
        {
            text-align:right;
        }
            .astriskNote::after {
                text-align: right;
                content: "(*) marked fields are mandatory";
                color: red;
                font-size: x-small;
            }

    </style>
</head>
