            </header>
            <!-- /site header -->
            <!-- Main navigation -->
            <ul id="side-nav" class="main-menu navbar-collapse collapsed">
                <li class="has-sub">
                    <a href="@Url.Action("Index", "Home")"><i class="icon-home"></i><span class="title">Home</span></a>
                    <ul class="nav">
                        @if (ViewContext.Controller.HasPermission("Home-index"))
                        {
                            <li><a href="@Url.Action("Index", "Home")"><span class="title">Dashboard</span></a></li>
                        }
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="@Url.Action("Index", "InPatient")"><i class="fa fa-wheelchair" style="padding-left:5px"></i><span class="title">Patients</span></a>
                    <ul class="nav">
                        @if (ViewContext.Controller.HasPermission("InPatient-index"))
                        {
                            <li><a href="@Url.Action("Index", "InPatient")"><span class="title">I/P Profile</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("OutPatient-index"))
                        {
                            <li><a href="@Url.Action("Index", "OutPatient")"><span class="title">O/P Profile</span></a></li>
                        }
                    </ul>
                </li>
