                        {
                            <li><a href="@Url.Action("Index", "BedType")"><span class="title">Bed Type</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("RoomType-index"))
                        {
                            <li><a href="@Url.Action("Index", "RoomType")"><span class="title">Room Type</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("Rooms-index"))
                        {
                            <li><a href="@Url.Action("Index", "Rooms")"><span class="title">Rooms</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("Beds-index"))
                        {
                            <li><a href="@Url.Action("Index", "Beds")"><span class="title">Bed Management</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("ConsultType-index"))
                        {
                            <li><a href="@Url.Action("Index", "ConsultType")"><span class="title">Consultations</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("ConsultationFee-index"))
                        {
