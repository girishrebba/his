                                    </li>

                                    <li class="external-last"> <a class="danger" href="#">All Messages</a> </li>
                                </ul>
                            </li>
                            <!-- /messages -->
                        </ul>
                        <!-- /user alerts -->
                    </div>
                </div>
            </div>
            <!-- /main header -->
            <!-- Main content -->
            <div class="main-content">               
                @RenderBody()
            </div>
            <!-- /main content -->
        </div>
        <!-- /main container -->
    </div>
    <!-- /page container -->
    <!--Load JQuery-->
    <!-- Footer -->
    <footer class="footer-main">
        &copy; 2017 <strong>Hospital Information System</strong><a target="_blank" href="#/"></a>
    </footer>
    <!-- /footer -->
