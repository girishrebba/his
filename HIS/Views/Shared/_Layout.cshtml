                        <a href="@Url.Action("Index", "Rooms")"><i class="fa fa-bed" style="padding-left:5px"></i><span class="title">Room Managment</span></a>
                        <ul class="nav">
                            <li><a href="@Url.Action("Index", "Rooms")"><span class="title">Rooms</span></a></li>
                            <li><a href="@Url.Action("Index", "Beds")"><span class="title">Bed Management</span></a></li>
                        </ul>
                    </li>*@
                <li class="has-sub">
                    <a href="@Url.Action("Index", "MedInventory")"><i class="fa fa-medkit" style="padding-left:5px"></i><span class="title">Pharmacy</span></a>
                    <ul class="nav">
                        @if (ViewContext.Controller.HasPermission("PurchaseOrder-index"))
                        {
                            <li><a href="@Url.Action("Index", "PurchaseOrder")"><span class="title">Purchase Orders</span></a></li>
                        }
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="index.html"><i class="icon-chart-bar"></i><span class="title">Reports</span></a>
                    <ul class="nav">
                        @if (ViewContext.Controller.HasPermission("Revenuerpt-index"))
                        {
                    <li class="active"><a href="@Url.Action("Index", "Revenuerpt")"><span class="title">Revenue Report</span></a></li>
                        }
                    @if (ViewContext.Controller.HasPermission("InventoryRpt-index"))
                    {
                    <li><a href="@Url.Action("Index", "InventoryRpt")"><span class="title">Inventory Report</span></a></li>
                    }
                    </ul>
                </li>
                <li class="has-sub active">
                    <a href="@Url.Action("Index", "User")"><i class="icon-lock"></i><span class="title">Admin</span></a>
                    <ul class="nav">
                        @if (ViewContext.Controller.HasPermission("User-index"))
                        {
                            <li class="active"><a href="@Url.Action("Index", "User")"><span class="title">Users</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("BloodGroup-index"))
                        {
                            <li><a href="@Url.Action("Index", "BloodGroup")"><span class="title">Blood Groups</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("UserType-index"))
                        {
                            <li><a href="@Url.Action("Index", "UserType")"><span class="title">User Types</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("Permissions-index"))
                        {
                            <li><a href="@Url.Action("Index", "Permissions")"><span class="title">Permissions</span></a></li>
                        }
                        @if (ViewContext.Controller.HasPermission("RolePermissions-index"))
                        {
                            <li><a href="@Url.Action("Index", "RolePermissions")"><span class="title">User Permissions</span></a></li>
                        }
