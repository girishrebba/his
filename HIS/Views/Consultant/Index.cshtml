
@{
    ViewBag.Title = "Consultants";
}


<!-- Breadcrumb -->
<ol class="breadcrumb breadcrumb-2">
    <li><a><i class="glyphicon-cog"></i>Admin</a></li>
    <li class="active"><strong>Consultants</strong></li>
</ol>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddModify","Consultant")')"><i class="fa fa-plus"></i> Add New</a>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="consultantTable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>DOB</th>
                                <th>Gender</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Marital Status</th>
                                <th>Qualification</th>
                                <th>Specialization</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#consultantTable").DataTable({
                "ajax": {
                    "url": "/Consultant/GetConsultants",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "NameDisplay" },
                    { "data": "DOBDisplay" },
                    { "data": "GenderDisplay" },
                    { "data": "Email" },
                    { "data": "Phone" },
                    { "data": "MaritalStatusDisplay" },
                    { "data": "Qualification" },
                    { "data": "DoctorTypeDisplay" },
                    {
                        "data":"ConsultantID", "render" : function (data) {
                            return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("AddModify","Consultant")/" + data + "')><i class='fa fa-user-edit'></i> Edit</a>";
                    },
                        "orderable": false,
                        "searchable":false
                    }
                ],
                "language": {
                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });


        function PopupForm(url) {
            $('body').loadingModal({ text: 'Loading...' });
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: true,
                    modal:true,
                    title: 'Add Modify User',
                    width: '65%',
                    top:'30%',
                    close: function () {
                        Popup.dialog('destroy').remove();
                    },
                    open: function (event, ui) {
                        $('.ui-dialog-content').css('overflow', 'hidden');
                        $('body').loadingModal('destroy');
                    }

                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $('body').loadingModal({ text: 'Processing...' });
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                        $('body').loadingModal('destroy');
                    }
                });
            }
            return false;
        }
    </script>
}



