@model HIS.TestType

@{
    /**/

    Layout = null;
}
<style type="text/css">

    input[type="checkbox"] {
        transform: scale(1.3, 1.3);
    }

    .checkbox .btn,
    .checkbox-inline .btn {
        padding-left: 2em;
        min-width: 7em;
    }

    .checkbox label,
    .checkbox-inline label {
        text-align: left;
    }
</style>



@using (Html.BeginForm("AddModify", "Lab", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.TestID)
    <div class="astriskNote"><span></span></div>

    <div class="checkbox">
        <label class="btn btn-success">
            @Html.CheckBoxFor(model => model.IsKit)
            Package
        </label>
    </div>

    <div class="form-group required">
        @Html.LabelFor(model => model.TestName, "Test", new { @class = "control-label" })
        @Html.EditorFor(model => model.TestName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TestName)
    </div>
    <div class="form-group required">
        @Html.LabelFor(model => model.TestCost, "Cost", new { @class = "control-label" })
        @Html.EditorFor(model => model.TestCost, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TestCost)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}