@model HIS.TestType

@{
    Layout = null;
}

@using (Html.BeginForm("AddModify", "Lab", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.TestID)
    <div class="astriskNote"><span></span></div>
    <div class="form-group required">
        @Html.LabelFor(model => model.TestName, new { @class = "control-label" })
        @Html.EditorFor(model => model.TestName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TestName)
    </div>
    <div class="form-group required">
        @Html.LabelFor(model => model.TestCost)
        @Html.EditorFor(model => model.TestCost, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TestCost)
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}