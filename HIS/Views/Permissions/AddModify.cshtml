@model HIS.Permission

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddModify</title>
</head>
<body>
    <div>
    </div>
</body>
</html>
@using (Html.BeginForm("AddModify", "Permissions", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
<div class="form-horizontal">
    @Html.HiddenFor(model => model.Permission_Id)
    <div class="form-group">


        @Html.LabelFor(model => model.PermissionDescription, "Description", new { @class = "control-label col-md-4" })
        <div class="col-sm-4">
            @Html.EditorFor(model => model.PermissionDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PermissionDescription)
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn" />
        </div>
    </div>
</div>
}


<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker({
            keyboardNavigation: false,
            forceParse: false,
            todayHighlight: true,
            todayBtn: false,
            autoclose:true,
            format: "mm/dd/yyyy",language: "en-US"
        });

        $('.btnpicker').click(function () {
            //alert('clicked');
            $('.datepicker').datepicker('show');
        });
    });
</script>
